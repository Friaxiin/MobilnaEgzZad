<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobilnaEgzZad.MainPage">

    <StackLayout BackgroundColor="LightCyan">
        <Label FontSize="Header" Text="Usługi sprzątające" TextColor="Black" HorizontalOptions="Center"/>

        <Frame BackgroundColor="AliceBlue" BorderColor="Blue">
            <StackLayout RadioButtonGroup.GroupName="services">
                <RadioButton Content="Pranie" x:Name="washing" CheckedChanged="CheckSelection"/>
                <RadioButton Content="Odkurzanie" x:Name="vaccuming" CheckedChanged="CheckSelection"/>
            </StackLayout>
        </Frame>

        <StackLayout Orientation="Horizontal">
            <Label FontSize="16" Text="Usługa przyspieszona" TextColor="Black"/>
            <CheckBox x:Name="fasterService" CheckedChanged="CheckCheckbox" Color="Black"/>
        </StackLayout>

        <StackLayout Orientation="Horizontal">
            <Label Text="Cena " FontSize="16"/>
            <Label Text="" x:Name="price" FontSize="16"/>
            <Label Text=" zł" FontSize="16"/>
        </StackLayout>

        <StackLayout>
            <Image x:Name="image" WidthRequest="300" HorizontalOptions="Center"/>
        </StackLayout>

        <Button Text="Zamów" Clicked="Accept" HorizontalOptions="Center" WidthRequest="150" BackgroundColor="DarkGreen" TextColor="White"/>
    </StackLayout>

</ContentPage>
